                {{ form_row(form.tabaquismo) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.alcoholismo) }}
            </div>
        </div>
    </div>
            
            
            
    <div class="row">        
        <div class="col-md-12">
            <div class="col-md-4">
                {{ form_row(form.hereditarios) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.patologicos) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.noPatologicos) }}
            </div>
        </div>
    </div>
    
    
    
    
  
    
   
             <div class="form-grouphide col-sm-9">
