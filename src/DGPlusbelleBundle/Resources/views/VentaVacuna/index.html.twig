{% extends 'DGPlusbelleBundle:Layout:layout.html.twig' %}

{% block contenido -%}
    <h1>Venta vacuna list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montototal</th>
                <th>Fechaventa</th>
                <th>Estado</th>
                <th>Cuotas</th>
                <th>Observaciones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_venta_vacuna_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.montoTotal }}</td>
                <td>{% if entity.fechaVenta %}{{ entity.fechaVenta|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.cuotas }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_venta_vacuna_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_venta_vacuna_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_venta_vacuna_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
