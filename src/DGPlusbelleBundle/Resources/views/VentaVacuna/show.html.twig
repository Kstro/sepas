{% extends 'DGPlusbelleBundle:Layout:layout.html.twig' %}

{% block contenido -%}
    <h1>Venta Vacuna</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Montototal</th>
                <td>{{ entity.montoTotal }}</td>
            </tr>
            <tr>
                <th>Fechaventa</th>
                <td>{{ entity.fechaVenta|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
            <tr>
                <th>Cuotas</th>
                <td>{{ entity.cuotas }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.observaciones }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_venta_vacuna') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_venta_vacuna_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
